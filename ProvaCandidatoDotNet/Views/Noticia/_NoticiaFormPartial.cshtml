@model ProvaCandidatoDotNet.Models.NoticiaViewModel

<form id="formNoticia" asp-action="Save" asp-controller="Noticia" method="post" onsubmit="return salvarNoticia()">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="modal-header">
        <h5 class="modal-title">@(Model.Id == 0 ? "Nova Notícia" : "Editar Notícia")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Titulo" class="form-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Conteudo" class="form-label"></label>
            <textarea asp-for="Conteudo" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Conteudo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Tags</label>
            <div>
                @foreach (var tag in Model.TagsDisponiveis)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.Id"
                        @(Model.SelectedTagIds.Contains(tag.Id) ? "checked" : "") />
                        <label class="form-check-label">@tag.Nome</label>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
